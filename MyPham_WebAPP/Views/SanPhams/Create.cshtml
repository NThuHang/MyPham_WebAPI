@model MyPham_WebAPP.Models.SanPham

@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header {
    Sản Phẩm
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                THÊM MỚI SẢN PHẨM
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "SanPhams", FormMethod.Post, new { @class = "form-horizontal tasi-form", enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true)
                    <div class="form-group ">
                        <label for="f-name" class="col-lg-2 ">Mã Sản Phẩm :</label>
                        <div class="col-lg-4">
                            @Html.TextBoxFor(model => model.ID_SP, new { @class = "form-control", @placeholder = "Nhập Tên Sản Phẩm", @autofocus = "autofocus" })
                            @Html.ValidationMessageFor(model => model.ID_SP, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-lg-2">Hình Ảnh :</label>
                        <div class="col-md-4">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <div class="fileupload-new thumbnail" style="width: 200px; height: 150px;">
                                    <img src="~/Content/Admin/img/noimage.png">
                                </div>
                                <div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 20px;">
                                </div>
                                <div>
                                    <span class="btn btn-white btn-file">
                                        <span class="fileupload-new"><i class="fa fa-paper-clip"></i> Chọn Hình Ảnh</span>
                                        <span class="fileupload-exists"><i class="fa fa-undo"></i> Hình Ảnh Khác</span>
                                        <input type="file" class="default" name="fileUpload" id="fileUpload">
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="f-name" class="col-lg-2 ">Tên Sản Phẩm :</label>
                        <div class="col-lg-4">
                            @Html.TextBoxFor(model => model.Ten_SP, new { @class = "form-control", @placeholder = "Nhập Tên Sản Phẩm" })
                            @Html.ValidationMessageFor(model => model.Ten_SP, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-lg-2 ">Danh Mục Sản Phẩm :</label>
                        <div class="col-lg-4">
                            @Html.TextBoxFor(model => model.ID_Loai, new { @class = "form-control", @placeholder = "Nhập Mã Loại Sản Phẩm" })
                            @Html.ValidationMessageFor(model => model.ID_Loai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ">
                        <label for="f-name" class="col-lg-2 ">Số Lượng :</label>
                        <div class="col-lg-4">
                            @Html.TextBoxFor(model => model.So_Luong, new { @class = "form-control", @placeholder = "Số Lượng" })
                            @Html.ValidationMessageFor(model => model.So_Luong, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-lg-2 ">Thương Hiệu :</label>
                        <div class="col-lg-4">
                            @Html.TextBoxFor(model => model.ThuongHieu, new { @class = "form-control", @placeholder = "Nhập Thương Hiệu" })
                            @Html.ValidationMessageFor(model => model.ThuongHieu, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 ">Mô Tả Sản Phẩm :</label>
                        <div class="col-lg-10">
                            @Html.TextAreaFor(model => model.Mota, new { @class = "form-control", @name = "Pro_Description", @cols = "50", @rows = "5" })
                            <p class="help-block">Bạn có thể nhập thông tin mô tả chung về sản phẩm.</p>
                            @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 ">Nội Dung :</label>
                        <div class="col-lg-10">
                            @Html.TextAreaFor(model => model.NoiDung, new { @class = "summernote", @name = "Pro_Content" })
                            @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-1">
                            <button class="btn btn-danger btn-shadow" type="submit"><i class="fa fa-save"></i> Lưu Lại</button>
                        </div>
                        <div>
                            <a class="btn btn-info btn-shadow" href="@Url.Action("Index", "SanPhams")">
                                <i class="fa fa-mail-reply-all"></i> Trở Về
                            </a>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>

