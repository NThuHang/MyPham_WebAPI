@model MyPham_WebAPP.Models.LoaiSP
@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header {
    Loại sản phẩm
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                SỬA LOẠI SẢN PHẨM
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "LoaiSPs", FormMethod.Post, new { @class = "form-horizontal tasi-form", enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(model => model.ID_Loai)
                    <div class="form-group">
                        <label for="f-name" class="col-lg-2 control-label">Tên Danh Mục</label>
                        <div class="col-lg-4">
                            @Html.TextBoxFor(model => model.Ten_Loai, new { @class = "form-control", @name = "name", @placeholder = "Nhập Tên Danh Mục", @autofocus = "autofocus" })
                        </div>
                        <label class="col-lg-2 control-label">Danh Mục Cha :</label>
                        <div class="col-lg-4">
                            @Html.TextBoxFor(model => model.ID_Cha, new { @class = "form-control", @name = "name", @placeholder = "Nhập Tên Danh Mục", @autofocus = "autofocus" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Mô Tả Danh Mục</label>
                        <div class="col-lg-10">
                            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", @name = "Description", @cols = "60", @rows = "8" })
                            <p class="help-block">Bạn có thể nhập thông tin mô tả chung về danh mục sản phẩm.</p>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-1">
                            <button class="btn btn-danger btn-shadow" type="submit"><i class="fa fa-save"></i> Lưu Lại</button>
                        </div>
                        <div>
                            <a class="btn btn-info btn-shadow" href="@Url.Action("Index","LoaiSPs")">
                                <i class="fa fa-mail-reply-all"></i> Quay Lại
                            </a>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>

