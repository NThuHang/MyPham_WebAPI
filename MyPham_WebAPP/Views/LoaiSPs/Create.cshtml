@model MyPham_WebAPP.Models.LoaiSP
@{
    ViewBag.Title = "Sản Phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header {
    Loại Sản Phẩm
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                THÊM MỚI LOẠI SẢN PHẨM
            </header>
            <div class="panel-body">
                @using (Html.BeginForm("Create", "LoaiSPs", FormMethod.Post, new { @class = "form-horizontal tasi-form", enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="f-name" class="col-lg-2 ">Mã Loại Sản Phẩm :</label>
                        <div class="col-lg-4">
                            @Html.TextBoxFor(model => model.ID_Loai, new { @class = "form-control", @placeholder = "Nhập Tên Sản Phẩm" })
                            @Html.ValidationMessageFor(model => model.ID_Loai, "", new { @class = "text-danger" })
                        </div>
                        <label class="col-lg-2 ">Loại Cha :</label>
                        <div class="col-lg-4">
                            @* @Html.DropDownListFor(model => model.ID_Cha, "Chọn Loại Tin Tức", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ID_Cha, "", new { @class = "text-danger" })*@
                            @Html.TextBoxFor(model => model.ID_Cha, new { @class = "form-control", @placeholder = "Nhập Tên Sản Phẩm" })
                            @Html.ValidationMessageFor(model => model.ID_Cha, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="f-name" class="col-lg-2 ">Tên Loại Sản Phẩm :</label>
                        <div class="col-lg-10">
                            @Html.TextBoxFor(model => model.Ten_Loai, new { @class = "form-control", @placeholder = "Nhập Tên Sản Phẩm" })
                            @Html.ValidationMessageFor(model => model.Ten_Loai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 ">Mô Tả Tin Tức :</label>
                        <div class="col-lg-10">
                            @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", @name = "News_Description", @cols = "50", @rows = "5" })
                            <p class="help-block">Bạn có thể nhập thông tin mô tả chung về sản phẩm.</p>
                            @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-1">
                            <button class="btn btn-danger btn-shadow" type="submit"><i class="fa fa-save"></i> Lưu Lại</button>
                        </div>
                        <div>
                            <a class="btn btn-info btn-shadow" href="@Url.Action("Index", "LoaiSPs")">
                                <i class="fa fa-mail-reply-all"></i> Trở Về
                            </a>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>

